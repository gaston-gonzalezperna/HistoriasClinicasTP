@model IEnumerable<HistoriasClinicas2.Models.Nota>

@{
    ViewData["Title"] = "Notas";
}

<h1>Notas</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.IdEvol">Crear Nueva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mensaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreAutor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mensaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaYHora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreAutor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-controller="Evoluciones" asp-action="Index" asp-route-id="@ViewBag.IdEpi">Volver a Evolucion</a>
</div>
