@model HistoriasClinicas2.Models.Episodio

@{
    ViewData["Title"] = "Cerrar";
}

<h3>¿Desea cerrar este episodio?</h3>
<div>
    <hr />
    @if (Model != null)
    {
        <form asp-action="Cerrar">
            @if (User.IsInRole("Medico"))
            {
                <div class="form-group">
                    <label asp-for="FechaYHoraAlta" class="control-label"></label>
                    <input asp-for="FechaYHoraAlta" class="form-control" />

                </div>
            }
            <input type="hidden" asp-for="Id" value="@ViewBag.IdEpisodio" />
            <input type="submit" value="Cerrar" class="btn btn-danger" />
        </form>
        <a asp-action="Index" asp-route-id="@ViewBag.IdHistoriaClinica">Volver a Historia Clinica</a>
    }
    else
    {
        <div class="card card-alert">
            <p>Todavia hay Evoluciones Abiertas</p>
        </div>
    }

</div>
