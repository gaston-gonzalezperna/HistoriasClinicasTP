@model IEnumerable<HistoriasClinicas2.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<h1>Lista de Pacientes</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObraSocial)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObraSocial)
            </td>
            @if (User.IsInRole("Empleado"))
            {
                <td>
                    <a asp-controller="HistoriasClinicas" asp-action="Details" asp-route-id="@item.Id">Historia</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Ver</a>
                </td>
            }
            @if (User.IsInRole("Medico"))
            {
                <td>
                    <a asp-controller="HistoriasClinicas" asp-action="Details" asp-route-id="@item.Id">Historia</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
