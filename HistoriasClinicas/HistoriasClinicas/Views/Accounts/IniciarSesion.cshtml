@{
    ViewData["Title"] = "Iniciar Sesion";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido</h1>

    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Iniciar Sesion</h5>
                        <br />
                        <form class="form-signin">
                            <div class="form-label-group">
                                <label for="inputEmail">Usuario</label>
                                <input type="email" id="inputEmail" class="form-control" placeholder="" required autofocus>
                            </div>
                            <br />
                            <div class="form-label-group">
                                <label for="inputPassword">Contraseña</label>
                                <input type="password" id="inputPassword" class="form-control" placeholder="" required>
                            </div>
                            <br />
                            <br />
                            <button class="btn btn-lg btn-success btn-block text-uppercase" type="submit">Ingresar</button>
                            <button class="btn btn-lg btn-info btn-block text-uppercase" type="submit">Registrarse</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>